@model Nop.Plugin.Payments.AlRajhi.Models.ConfigurationModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")


<form asp-controller="PaymentAlRajhi" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @*@Html.Raw(T("Plugins.Payments.AlRajhi.Instructions", $"{webHelper.GetStoreLocation()}Plugins/PaymentAlRajhi/PDTHandler"))*@
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="UseSandbox_OverrideForStore" asp-input="UseSandbox" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="UseSandbox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="UseSandbox" />
                        <span asp-validation-for="UseSandbox"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TranportalId_OverrideForStore" asp-input="TranportalId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TranportalId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TranportalId" />
                        <span asp-validation-for="TranportalId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TranportalPassword_OverrideForStore" asp-input="TranportalPassword" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TranportalPassword" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TranportalPassword" />
                        <span asp-validation-for="TranportalPassword"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TerminalResourcekey_OverrideForStore" asp-input="TerminalResourcekey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="TerminalResourcekey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TerminalResourcekey" />
                        <span asp-validation-for="TerminalResourcekey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>